{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "backend/dist/api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "^/api/.*$",
      "dest": "backend/dist/api/index.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "^(?!/api/).*$",
      "dest": "/index.html"
    }
  ]
}
